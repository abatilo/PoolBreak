<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="de.eazegraph.app.fragments.ValueLineChartFragment" >

    <TextView
        android:id="@+id/text_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="40dp"
        android:textSize="32sp"
        android:text="@string/listening"
        android:layout_gravity="center_horizontal" />

    <org.eazegraph.lib.charts.ValueLineChart
        android:id="@+id/chart_pitch"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:egUseCubic="false"
        app:egUseOverlapFill="true"
        app:egUseDynamicScaling="false"
        app:egShowValueIndicator="false" />

    <org.eazegraph.lib.charts.ValueLineChart
        android:id="@+id/chart_decibel"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        app:egUseCubic="false"
        app:egUseOverlapFill="true"
        app:egUseDynamicScaling="false"
        app:egShowValueIndicator="false" />

    <Button
        android:id="@+id/button_finished"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/btn_outline_default"
        android:fontFamily="sans-serif-light"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:text="@string/button_finished"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>