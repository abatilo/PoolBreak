    <!-- Action Bar Style -->
    <style name="PoolBreak.Theme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/green_500</item>
        <item name="android:titleTextStyle">@style/PoolBreak.Theme.ActionBar.TitleText</item>
    </style>

    <!-- Action Bar text style -->
    <style name="PoolBreak.Theme.ActionBar.TitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

